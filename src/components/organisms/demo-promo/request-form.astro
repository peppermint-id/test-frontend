---
import './styles.css'
import {FormInput} from "@/components/molecules";
import {PlaceholderArrow} from "../../svgs";

const formFields = [
    {label: 'First name', placeholder: 'Enter your first name', field: 'firstName'},
    {label: 'Last name', placeholder: 'Enter your last name', field: 'lastName'},
    {label: 'Email', placeholder: 'Enter your work email', field: 'email'},
    {label: 'Job title', placeholder: 'Enter your job title', field: 'job'},
    {label: 'Company', placeholder: 'Enter your company name', field: 'company'},
]
---

<form class="request-form u-box-shadow">
    <h4 class="text__heading--h4-lg text__heading--h5-md text__heading--h6">Request a Demo</h4>

    <div class="request-form__input-group">
        {formFields.map((field) => (
                <FormInput
                        required
                        {...field}
                />
        ))}
    </div>

    <div class="request-form__protection">
        <p class="text__body--14">Tetrate uses your contact info to share product updates. You can unsubscribe anytime.
            Learn more in our
            <a href="" style="color: var(--color-blue-500)">Privacy Policy.</a>
        </p>
        <img
                src={'/images/mocks/captcha.png'}
                alt="Captcha"
                loading="lazy"
                class="captcha"
                width="256px"
                height="60px"
        />
    </div>

    <button class="btn btn--primary request-form__button text__body--16-semibold">
        Submit
        <PlaceholderArrow/>
    </button>
</form>