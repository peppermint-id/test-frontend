---
import './styles.css'
import Card from './promo-card.astro'
import {GetSupport, PlaceholderArrow, ShieldCheck, ArrowsSplit, ChartLine, ListChecks} from "../../svgs";
import {IconType, Icon} from "../../atoms";
import {TCard} from "@/types";

const promoCards: TCard[] = [
    {title: 'Connect & Protect', description:`Secure and connect thousands of${'\u00A0'}microservices with Zero Trust across any environment.`, icon: 'shield-check'},
    {title: 'Simplify Traffic Management', description:'Enable built-in traffic routing, splitting, canary deployments, and monitoring.', icon: 'arrows-split'},
    {title: 'Improve Visibility & Troubleshooting', description:'Gain deep observability for SLOs and faster issue resolution.', icon: 'chart-line'},
    {title: 'Ensure Compliance', description:'Safeguard services, APIs, and data while meeting PCI, HIPAA, GDPR, and FedRAMP requirements.', icon: 'list-checks'},
]
---

<div class="promo">
    <h1 class="text__heading--h1-lg text__heading--h3-md text__heading--h4">Get Your <br class="promo-heading-br"/> <span class="promo-heading-secondary">Custom Demo</span></h1>
    <p class="promo-description text__body--16">Tetrate provides the leading solution for running open source software
        at production scale, availability, and security.</p>

    <div class="promo-content">
        <p class="text__body--16-semibold text__body--18-semibold-md">With Tetrateâ€™s Istio and Envoy-based products, you can:</p>
        <div class="promo-content-cards">
            {
                promoCards.map(({title, description, icon}) => (
                        <Card
                                title={title}
                                description={description}
                        >
                            <Icon name={icon} />
                        </Card>
                ))
            }
        </div>
    </div>
</div>