---
import "./styles.css";

import { FeatureCard } from "@/components/molecules/";
import { PricingRequestForm } from "@/components/organisms";
import type { IconType } from "@/components/atoms";

interface FeatureCardProps {
	icon: IconType;
	title: string;
	text: string;
}

const featureCards: FeatureCardProps[] = [
	{
		icon: "card-shield-check",
		title: "Connect & Protect",
		text: "Secure and\u00a0connect thousands of\u00a0microservices with\u00a0Zero\u00a0Trust across\u00a0any\u00a0environment.",
	},
	{
		icon: "card-arrow-split",
		title: "Simplify Traffic Management",
		text: "Enable built-in traffic routing, splitting,\u00a0canary\u00a0deployments, and\u00a0monitoring.",
	},
	{
		icon: "card-chart-line-up",
		title: "Improve Visibility & Troubleshooting",
		text: "Gain deep observability for\u00a0SLOs and\u00a0faster\u00a0issue\u00a0resolution.",
	},
	{
		icon: "card-list-checks",
		title: "Ensure Compliance",
		text: "Safeguard services, APIs, and\u00a0data while meeting PCI, HIPAA, GDPR, and\u00a0FedRAMP\u00a0requirements.",
	},
];
---

<section class="pricingRequest">
	<div class="u-grid-bg u-grid-bg--top u-grid-bg--primary u-grid-bg--top-0">
	</div>
	<div
